<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="158dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:backgroundTint="#AA8787"
        android:src="@drawable/download" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/logo"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edt_background"
        android:backgroundTint="#E4E4DB"
        android:fontFamily="sans-serif-black"
        android:foregroundTint="#3F51B5"
        android:hint="Name"
        android:paddingLeft="18dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edttt_email"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/name"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edt_background"
        android:backgroundTint="#E4E4DB"
        android:fontFamily="sans-serif-black"
        android:hint="Email"
        android:paddingLeft="18dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edttt_password"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/edttt_email"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edt_background"
        android:backgroundTint="#E4E4DB"
        android:fontFamily="sans-serif-black"
        android:hint="Password"
        android:paddingLeft="18dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnn_signup"
        android:layout_width="102dp"
        android:layout_height="63dp"
        android:layout_below="@id/edttt_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:background="@color/cardview_shadow_start_color"
        android:backgroundTint="#D8CA56"
        android:fontFamily="sans-serif-light"
        android:text="Sign Up"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>